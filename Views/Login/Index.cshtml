@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ul>

        <!-- Slides -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/doctors.jpg" width="1200" height="700" alt="Image 1">
            </div>
            <div class="carousel-item">
                <img src="~/doctors2.jpg" width="1200" height="700" alt="Image 2">
            </div>
        </div>

    </div>

</div>

<section id="services" class="bg-light py-5">
    <div class="container">
        <div class="text-center bg-opacity-50 bg-light p-5">
            <h2>Our Services</h2>
            <p class="lead">Discover what we offer</p>
        </div>

        <div class="row">
            <!-- Service 1 -->
            <div class="col-lg-4 col-md-6 mb-4 bg-opacity-50 bg-success p-5">
                <div class="service-item text-center">
                    <i class="fas fa-cogs fa-3x text-primary mb-3"></i>
                    <h3>Service #1</h3>
                    <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
            </div>

            <!-- Service 2 -->
            <div class="col-lg-4 col-md-6 mb-4 bg-opacity-50 bg-danger p-5">
                <div class="service-item text-center">
                    <i class="fas fa-laptop fa-3x text-primary mb-3"></i>
                    <h3>Service #2</h3>
                    <p class="text-muted">Proin vel quam quis lectus vehicula aliquam.</p>
                </div>
            </div>

            <!-- Service 3 -->
            <div class="col-lg-4 col-md-6 mb-4 bg-opacity-50 bg-info p-5">
                <div class="service-item text-center">
                    <i class="fas fa-database fa-3x text-primary mb-3"></i>
                    <h3>Service #3</h3>
                    <p class="text-muted">Nulla nec nisi eu arcu auctor scelerisque.</p>
                </div>
            </div>

            <!-- Add more service items here -->
        </div>
    </div>
</section>




<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script>
    $(document).ready(function() {
        $('#myCarousel').carousel();

        // Set an interval to change the slide every 3 seconds (3000 milliseconds)
        setInterval(function() {
            $('#myCarousel').carousel('next'); // Move to the next slide
        }, 2000);
    });


</script>