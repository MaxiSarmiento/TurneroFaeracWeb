<script>
    $(document).ready(function () {
        $("#btnBuscar").click(function () {
            var selectedEspecializacion = $("#ddlEspecializacion").val();
            var nombreFiltro = $("#txtKeyword").val(); // Obtén el valor del filtro de búsqueda

            $.ajax({
                url: "/LandingPage/BuscarDocs",
                type: "POST",
                data: { idEspecializacion: selectedEspecializacion, nombreFiltro: nombreFiltro }, // Incluye ambos valores
                success: function (data) {
                    $("#resultadoBusqueda").html(data);
                },
                error: function () {
                    alert("Hubo un error al buscar doctores.");
                }
            });
        });
    });
</script>
<script>
    $(document).ready(function () {
        // Evento cuando se cambia la especialización
        $("#ddlEspecializacion").change(function () {
            var idEspecializacion = $(this).val();

            // Realiza una solicitud AJAX para obtener los doctores según la especialización seleccionada
            $.ajax({
                url: "/LandingPage/ObtenerDoctores", // Reemplaza con la URL correcta de tu acción
                type: "GET", // O POST según tu configuración
                data: { idEspecializacion: idEspecializacion },
                success: function (data) {
                    // Limpia el segundo select
                    $("#ddlDoctores").empty();

                    // Agrega las opciones de doctores
                    $.each(data, function (index, doctor) {
                        $("#ddlDoctores").append('<option value="' + doctor.Value + '">' + doctor.Text + '</option>');
                    });
                },
                error: function () {
                    alert("Hubo un error al cargar los doctores.");
                }
            });
        });
    });

    $(document).ready(function () {
        // Configura el datetimepicker para el campo de fecha
        $('#fechaInput').datetimepicker({
            format: 'DD-MM-YYYY', // Formato de fecha deseado
            // Agrega más configuraciones según tus necesidades
        });

        // Configura el datetimepicker para el campo de hora
        $('#horaInput').datetimepicker({
            format: 'HH:mm', // Formato de hora deseado
            // Agrega más configuraciones según tus necesidades
        });

        // Maneja el evento de selección de fecha
        $('#fechaInput').on('dp.change', function (e) {
            var selectedDate = e.date.format('DD-MM-YYYY');
            var selectedTime = $('#horaInput').val(); // Obtén el valor seleccionado de la hora

            // Realiza una solicitud AJAX para obtener los horarios disponibles en la fecha y hora seleccionadas
            $.ajax({
                url: "./LandingPage/ObtenerHorariosDisponibles", // Reemplaza con la URL correcta
                type: "GET", // O POST según tu configuración
                data: { fecha: selectedDate, hora: selectedTime },
                success: function (data) {
                    // Actualiza el elemento HTML donde deseas mostrar los horarios disponibles
                    $('#horariosDisponibles').html(data);
                },
                error: function () {
                    alert("Hubo un error al obtener los horarios disponibles.");
                }
            });
        });
    });
</script>
