@model List<TurneroFaeracWeb.Models.DoctoresCLS>


<table class="table tab-content table-bordered table-hover">
    <tr>
        <td align="center"><strong>ID</strong></td>
        <td align="center"><strong>NOMBRE</strong></td>
        <td align="center"><strong>Apellido</strong></td>
        <td align="center"><strong>Especializacion</strong></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.IdDoc)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.NombreDoc)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.ApeDoc)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.IDEspecializacion)
            </td>
            <td style="text-align: center;">
                <button type="button" onclick="Editar(@item.IdDoc)" class="btn btn-primary glyphicon-edit" data-toggle="modal" data-target="#exampleModal">
                    <img src="~/images/
                         " alt="Editar" class="editar-icon" />
                </button>
                <button type="button" onclick="Eliminar(@item.IdDoc)" class="btn btn-danger glyphicon-trash" data-toggle="modal" data-target="#EliminarConfirmacion">
                    <img src="~/images/
                         
                         " alt="Eliminar" class="editar-icon" />
                </button>
            </td>
        </tr>
    }


</table>

