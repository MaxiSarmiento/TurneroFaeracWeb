
@model List<TurneroFaeracWeb.Models.TurnosDoctores>

<table class="table tab-content table-bordered table-hover">
    <tr>
        <td align="center"><strong>Paciente</strong></td>
        <td align="center"><strong>TipoTurno</strong></td>
        <td align="center"><strong>Doctor</strong></td>
        <td align="center"><strong>Fecha</strong></td>
        <td align="center"><strong>Hora</strong></td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Pacientes.NombrePac)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Doctores.IDEspecializacion)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Doctores.NombreDoc)
                @Html.DisplayFor(modelItem => item.Doctores.ApeDoc)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Turnos.Fecha)
            </td>
            <td style="text-align: center;">
                @Html.DisplayFor(modelItem => item.Turnos.Hora)
            </td>
            <td style="text-align: center;">
                <button type="button" onclick="GuardarTurno(@item.Turnos.IdTurno)" class="btn btn-primary glyphicon-edit" data-toggle="modal" data-target="#exampleModal">
                    <img src="~/images/btnedit.svg" alt="Nuevo Turno" class="editar-icon" />
                </button>
                <button type="button" onclick="EliminarTurno(@item.Turnos.IdDoc)" class="btn btn-danger glyphicon-trash" data-toggle="modal" data-target="#EliminarConfirmacion">
                    <img src="~/images/btnborrar.svg" alt="Eliminar Turno" class="editar-icon" />
                </button>
            </td>
        </tr>
    }


</table>

